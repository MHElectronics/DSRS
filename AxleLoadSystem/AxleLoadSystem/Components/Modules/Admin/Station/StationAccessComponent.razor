@page "/stationaccess"
@inject IUserService userService
@inject IStationService stationService


<h3>Station Access</h3>
<div class="box">
    <div class="box-body">
        <div class="row">
            @if (users is not null)
            {
                <div class="col-md-4">
                    <label>List of Users</label>
                    <select class="form-control" @bind="@userId">
                        <option value="0">-Select User-</option>
                        @foreach (User user in users)
                        {
                            <option value="@user.Id">@user.Name</option>
                        }
                    </select>
                </div>

            }
            @if (stations is not null)
            {
                <div class="col-md-4">
                    <label>List of Stations</label>
                    <select class="form-control" @bind="@stationId">
                        <option value="0">-Select Station-</option>
                        @foreach (Station station in stations)
                        {
                            <option value="@station.StationId">@station.StationName</option>
                        }
                    </select>
                </div>
            }
            <div class="col-md-4">
                <label>Station Access</label>
                <div class="form-group">
                    <div class="icheck-primary d-inline">
                        <input type="checkbox" @bind="@approve" id="chkIsApproved" />
                        <label for="chkIsApproved">Approve?</label>
                    </div>
                </div>

                    <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>


@code {
    private IEnumerable<User?> users { get; set; }
    private IEnumerable<Station?> stations { get; set; }

    private int userId { get; set; } = 0;
    private int stationId { get; set; }
    private bool approve { get; set; }
    protected override async Task OnInitializedAsync()
    {
        users = await userService.GetUsers();
        stations = await stationService.Get();
    }

}
