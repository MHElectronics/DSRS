@page "/classstatus/{mode?}/{id?}"
@inject IClassStatusService classStatusService

@if (string.IsNullOrEmpty(Mode))
{
    <ListClassStatus/>
}
else
{
    <FormComponent classStatus="classStatus" Mode="SelectedFormMode" />
}

@code {
    [Parameter]
    public string Mode { get; set; }
    [Parameter]
    public string Id { get; set; }
    private ClassStatus classStatus { get; set; } = null;
    private FormMode SelectedFormMode { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (string.IsNullOrEmpty(Mode))
        {
            return;
        }

        if (Mode.ToLower() == "new")
        {
            SelectedFormMode = FormMode.Add;
            classStatus = new();
        }
        else if (!string.IsNullOrEmpty(Id))
        {
            int id = Convert.ToInt32(Id);
            classStatus = await classStatusService.GetClassStatus(id);

            if (Mode.ToLower() == "details")
            {
                SelectedFormMode = FormMode.Details;
            }
            else if (Mode.ToLower() == "edit")
            {
                SelectedFormMode = FormMode.Edit;
            }
        }
    }
}
