@using System
@using BOL
@inject IMeterService MeterService
@inject AuthenticationStateProvider authStateProvider
@inject IStringLocalizer<Locales.Resource> localizerResource
@inject IStringLocalizer<Locales.Reports> localizer

<PageTitleComponent Title="@localizer["ReportConfiguration.Meter"]"></PageTitleComponent>

@if (Meter is null)
{
    <Loader/>
}
else
{
    <EditForm Model="@Meter" OnValidSubmit=@OnValidSubmit OnInvalidSubmit="@OnInvalidSubmit">
        <DataAnnotationsValidator />
        <div class="card card-primary card-outline">
            <div class="card-body">
                <div class="row">                   
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            @if (Mode == FormMode.Details)
                            {
                                <label for="MeterNumber" class="form-label">@localizer["Meter.MeterNumber"]</label>
                                <label class="form-control">@Meter.MeterNumber</label>
                            }
                            else
                            {
                                <label for="MeterNumber" class="form-label">@localizer["Meter.MeterNumber"]</label>
                                <input type="text" @bind="Meter.MeterNumber" required class="form-control" placeholder="Meter Number" id="MeterNumber" />
                                <ValidationMessage For="() => Meter.Name" />
                            }
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            @if (Mode == FormMode.Details)
                            {
                                <label for="Description" class="form-label">@localizer["Meter.Description"]</label>
                                <label class="form-control">@Meter.Description</label>
                            }
                            else
                            {
                                <label for="Description" class="form-label">@localizer["Meter.Description"]</label>
                                <input type="text" @bind="Meter.Description" required class="form-control" placeholder="Meter Description" id="Description" />
                                <ValidationMessage For="() => Meter.Name" />
                            }
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            @if (Mode == FormMode.Details)
                            {
                                <label for="Address" class="form-label">@localizer["Meter.Address"]</label>
                                <label class="form-control">@Meter.Address</label>
                            }
                            else
                            {
                                <label for="Address" class="form-label">@localizer["Meter.Address"]</label>
                                <input type="text" @bind="Meter.Address" required class="form-control" placeholder="Meter Address" id="Address" />
                                <ValidationMessage For="() => Meter.Address" />
                            }
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            @if (Mode == FormMode.Details)
                            {
                                <label for="ContactNo" class="form-label">@localizer["Meter.ContactNo"]</label>
                                <label class="form-control">@Meter.ContactNo</label>
                            }
                            else
                            {
                                <label for="ContactNo" class="form-label">@localizer["Meter.ContactNo"]</label>
                                <input type="text" @bind="Meter.ContactNo" required class="form-control" placeholder="Meter Contact No" id="ContactNo" />
                                <ValidationMessage For="() => Meter.ContactNo" />
                            }
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            @if (Mode == FormMode.Details)
                            {
                                <label for="MeterType" class="form-label">@localizer["Meter.MeterType"]</label>
                                <label class="form-control">@Meter.MeterType</label>
                            }
                            else
                            {
                                <label for="MeterType" class="form-label">@localizer["Meter.MeterType"]</label>
                                <input type="text" @bind="Meter.MeterType" required class="form-control" placeholder="Meter Meter Type" id="MeterType" />
                                <ValidationMessage For="() => Meter.MeterType" />
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="col-md-4 col-sm-12 btn-group">
                    @if (Mode == FormMode.Details)
                    {
                        string editLink = "/Meter/edit/" + Meter.Id;
                        <NavLink class="btn btn-primary" href="@editLink">@localizerResource["Button.Edit"]</NavLink>
                    }
                    else
                    {
                        <button class="btn btn-primary" type="submit">@(Mode == FormMode.Add ? @localizerResource["Button.Save"] : @localizerResource["Button.Update"])</button>
                    }
                    <NavLink class="btn btn-primary" href="/Meter">@localizerResource["Button.Back"]</NavLink>
                        @if (!string.IsNullOrEmpty(ValidationSummary))
                    {
                        <label class="error">@ValidationSummary</label>
                    }
                </div>
            </div>
        </div>
    </EditForm>
}

@code {
    [Parameter]
    public Meter Meter { get; set; } = new();
    [Parameter]
    public FormMode Mode { get; set; } = FormMode.Details;
    private User currentUser { get; set; }
    private bool isSuccess { get; set; }
    string ValidationSummary;

    protected override async Task OnInitializedAsync()
    {
        var customStateProvider = (CustomAuthenticationStateProvider)authStateProvider;
        currentUser = await customStateProvider.GetAuthorizedUser();
    }

    void OnInvalidSubmit()
    {
        ValidationSummary = "Please enter valid data";
    }
    async Task OnValidSubmit(EditContext editContext)
    {
        ValidationSummary = "";

        if (Mode == FormMode.Edit)
        {
            await MeterService.UpdateMeter(Meter, currentUser);
            ValidationSummary = "Meter Updated Successfully";
        }
        else
        {
            isSuccess = await MeterService.InsertMeter(Meter, currentUser);
            if (isSuccess)
            {
                ValidationSummary = "New Meter added";
            }
            else
            {
                ValidationSummary = "New Meter added failed";
            }
        }
    }
}
