@using System
@using BOL
@inject ICompanyService companyService
@inject AuthenticationStateProvider authStateProvider
@inject IStringLocalizer<Locales.Resource> localizerResource
@inject IStringLocalizer<Locales.Company> localizer

<PageTitleComponent Title="@localizer["Company.title"]"></PageTitleComponent>

@if (company is null)
{
    <Loader/>
}
else
{
    <EditForm Model="@company" OnValidSubmit=@OnValidSubmit OnInvalidSubmit="@OnInvalidSubmit">
        <DataAnnotationsValidator />
        <div class="card card-primary card-outline">
            <div class="card-body">
                <div class="row">                   
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            @if (Mode == FormMode.Details)
                            {
                                <label for="name" class="form-label">@localizer["Company.Name"]</label>
                                <label class="form-control">@company.Name</label>
                            }
                            else
                            {
                                <label for="name" class="form-label">@localizer["Company.Name"]</label>
                                <input type="text" @bind="company.Name" required class="form-control" placeholder="Name of company" id="name" />
                                <ValidationMessage For="() => company.Name" />
                            }
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            @if (Mode == FormMode.Details)
                            {
                                <label for="Description" class="form-label">@localizer["Company.Description"]</label>
                                <label class="form-control">@company.Description</label>
                            }
                            else
                            {
                                <label for="Description" class="form-label">@localizer["Company.Description"]</label>
                                <input type="text" @bind="company.Description" required class="form-control" placeholder="Company Description" id="Description" />
                                <ValidationMessage For="() => company.Name" />
                            }
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            @if (Mode == FormMode.Details)
                            {
                                <label for="Address" class="form-label">@localizer["Company.Address"]</label>
                                <label class="form-control">@company.Address</label>
                            }
                            else
                            {
                                <label for="Address" class="form-label">@localizer["Company.Address"]</label>
                                <input type="text" @bind="company.Address" required class="form-control" placeholder="Company Address" id="Address" />
                                <ValidationMessage For="() => company.Address" />
                            }
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            @if (Mode == FormMode.Details)
                            {
                                <label for="ContactNo" class="form-label">@localizer["Company.ContactNo"]</label>
                                <label class="form-control">@company.ContactNo</label>
                            }
                            else
                            {
                                <label for="ContactNo" class="form-label">@localizer["Company.ContactNo"]</label>
                                <input type="text" @bind="company.ContactNo" required class="form-control" placeholder="Company Contact No" id="ContactNo" />
                                <ValidationMessage For="() => company.ContactNo" />
                            }
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            @if (Mode == FormMode.Details)
                            {
                                <label for="MeterType" class="form-label">@localizer["Company.MeterType"]</label>
                                <label class="form-control">@company.MeterType</label>
                            }
                            else
                            {
                                <label for="MeterType" class="form-label">@localizer["Company.MeterType"]</label>
                                <input type="text" @bind="company.MeterType" required class="form-control" placeholder="Company Meter Type" id="MeterType" />
                                <ValidationMessage For="() => company.MeterType" />
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="col-md-4 col-sm-12 btn-group">
                    @if (Mode == FormMode.Details)
                    {
                        string editLink = "/company/edit/" + company.Id;
                        <NavLink class="btn btn-primary" href="@editLink">@localizerResource["Button.Edit"]</NavLink>
                    }
                    else
                    {
                        <button class="btn btn-primary" type="submit">@(Mode == FormMode.Add ? @localizerResource["Button.Save"] : @localizerResource["Button.Update"])</button>
                    }
                    <NavLink class="btn btn-primary" href="/company">@localizerResource["Button.Back"]</NavLink>
                        @if (!string.IsNullOrEmpty(ValidationSummary))
                    {
                        <label class="error">@ValidationSummary</label>
                    }
                </div>
            </div>
        </div>
    </EditForm>
}

@code {
    [Parameter]
    public Company company { get; set; } = new();
    [Parameter]
    public FormMode Mode { get; set; } = FormMode.Details;
    private User currentUser { get; set; }
    private bool isSuccess { get; set; }
    string ValidationSummary;

    protected override async Task OnInitializedAsync()
    {
        var customStateProvider = (CustomAuthenticationStateProvider)authStateProvider;
        currentUser = await customStateProvider.GetAuthorizedUser();
    }

    void OnInvalidSubmit()
    {
        ValidationSummary = "Please enter valid data";
    }
    async Task OnValidSubmit(EditContext editContext)
    {
        ValidationSummary = "";

        if (Mode == FormMode.Edit)
        {
            await companyService.UpdateCompany(company, currentUser);
            ValidationSummary = "Company Updated Successfully";
        }
        else
        {
            isSuccess = await companyService.InsertCompany(company, currentUser);
            if (isSuccess)
            {
                ValidationSummary = "New Company added";
            }
            else
            {
                ValidationSummary = "New Company added failed";
            }
        }
    }
}
